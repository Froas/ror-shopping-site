
<p><%= "You have #{current_cart.cart_items.size} items in your cart "%>
Cart id is: <%= current_cart.id %>
Cart: <%= current_cart %>
<% @cart_items.each do |item|  %>
  <div class="cart-container">
    <% if item.product.image.attached? %>
      <div class="cart-item-img">
        <%= image_tag item.product.image, class: "img" %>
      </div>
    <% else %>
      <div class="cart-item-img">  
        <%= image_tag 'default-imag.jpg' %>
      </div>
    <% end %>
    <div class="cart-item">
      <p><%= item.product.title %></p>
      <p><%= item.product.price %>$</p>
    </div>
  </div>
  <%= form_with model: @order_item, remote: true, data: { controller:  "confirmation", action: "submit->confirmation#confirm" }   do |f|%>
      <%= f.hidden_field :product_id, :value => item.product.id %>
      <%= f.hidden_field :item_id, :value => item.id %>
      <%= f.submit "Buy", class: "btn btn-primary"%>
  <% end %>

  <%= link_to "Remove Items", delete_path_url(item), method: :delete, remote: true%>
<% end %>
<p></p>
