<h1>Hello <%= current_user.name %></h1>
You order has been confirmed 
<h2>Your email is:<%= current_user.email %></h2>
<p>Your orders are:</p>
<% @order_items.each do |item| %> 
  <div class="order-container">
    <% if item.product.image.attached? %>
      <div class="order-item-img">
        <%= image_tag item.product.image, class: "img" %>
      </div>
    <% else %>
      <div class="order-item-img">  
        <%= image_tag 'default-imag.jpg' %>
      </div>
    <% end %>
    <div class="order-item">
      <p><%= item.product.title %></p>
      <p><%= item.product.price %>$</p>
    </div>
  </div>
  <%= link_to "Remove Items", delete_path_url(item), method: :delete, remote: true%>
<% end %>
<p></p>

<%= current_order.order_items %>
<p><%= "#{current_order.order_items.size} items with a value of $"%></p>