<div class="cart-items-container">
  <% if user_signed_in? %>
    <p class="order-item-quantity"><%= "You have #{current_order.order_items.size} orders "%></p>
  <% elsif staff_signed_in? %>
    <p class="order-item-quantity"><%= " #{@user.name} has #{@order_items.size} orders "%></p>
  <% end %>
  <% @order_items.each do |items| %> 
    <%= @item = OrderItem.find_by(order_line_item_id: items.id)  %>
    <%=@item.id %> |
  <div class="order-item-container">
    <%= image_tag @item.product.image.attached? ? @item.product.image : 'default-imag.jpg', class: "cart-item-img"  %>
    <div class="cart-item-info">
      <p>Order number: <%= @item.id %> <p>
      <p class="cart-item-title"><%= @item.product.title %></p>
      <p class="cart-item-title"><%= @item.product.price %> $</p>
    </div>
  </div>
  <%= link_to "Detail about Order", details_path(user: @user, item: @item), class: "order-detail-button"%>
  <%= @item %>
  <%= @item.id %>
  <% end %>
</div>
