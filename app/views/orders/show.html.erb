      <div class="order-item-img">
        <%= image_tag item.product.image, class: "img" %>
      </div>
    <% else %>
      <div class="order-item-img">  
        <%= image_tag 'default-imag.jpg' %>
      </div>
    <% end %>
    <div class="order-item">
      <p><%= item.product.title %></p>
      <p><%= item.product.price %>$</p>
    </div>
  </div>

<% end %>
